generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id              String   @id @default(uuid())
  username        String   @unique
  email           String   @unique 
  password        String
  phone           String?
  // image           String?
  register_date   DateTime @default(now())
  referralcode    String   @unique
  redeemedPoints  Int      @default(0)
  isVerified      Boolean
  events          Event[]

}

model Roles {
  id              String  @id @default(uuid())
  roleId          String   
  name            String  
}

model Event {
  id                  String   @id @default(uuid())
  name                String  
  description         String 
  city                String
  address             String 
  start_date          String  
  end_date            String  
  isActive            Boolean
  // event_category_id   String
  created_date        DateTime @default(now())
  userId              String   
  createdBy           User     @relation(fields: [userId], references: [id])
}



